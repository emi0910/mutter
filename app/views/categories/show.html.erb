<% provide(:title, "Category") %>

<div class="row">
  <%= image_tag @category.image.url, class: 'col s12' %>
</div>

<div class="row">
  <div class="col s6">
    <h5><%= @category.name %></h5>
    <p>
      <%= @category.description %>
    </p>
  </div>

  <div class="col s6">
    <h5>Articles</h5>
    <%= render @articles, mcol: 'm12', image: false %>
    <!-- link to articles have this category -->
  </div>
</div>
