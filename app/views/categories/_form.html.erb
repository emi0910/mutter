<%= form_for(@category) do |f| %>
  <%= render 'shared/error_messages', object: @category %>

  <div class="row">
    <div class="col s8">
      <div class="input-field">
        <%= f.text_field :name, class: 'validate' %>
        <%= f.label :name %>
      </div>

      <div class="input-field">
        <%= f.text_area :description, class: 'materialize-textarea', rows: 20, wrap: :off %>
        <%= f.label :description %>
      </div>
    </div>

    <div class="col s4">
      <div class="row">
        <%= image_tag @category.image.url, class: 'col s12' if @category.image? %>
      </div>

      <div class="input-field file-field">
        <div class="btn">
          <span>Image</span>
          <%= f.file_field :image %>
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text" placeholder="Upload your icon">
        </div>
        <%= f.hidden_field :image_cache %>
      </div>
    </div>
  </div>

  <%= f.button class: "btn" do %>
    <%= yield(:button_text) %>
    <i class="material-icons right">send</i>
  <% end %>
<% end %>
