<%= form_for(@article) do |f| %>
  <%= render 'shared/error_messages', object: @article %>

  <%= f.hidden_field :user_id %>

  <div class="input-field">
    <%= f.text_field :title, class: 'validate' %>
    <%= f.label :title %>
  </div>

  <%= f.check_box :public %>
  <%= f.label :public %>

  <%= f.hidden_field :count %>

  <div class="input-field">
    <i class="material-icons prefix">create</i>
    <%= f.text_area :content, class: 'materialize-textarea', rows: 20, wrap: :off %>
    <%= f.label :content %>
  </div>

  <%= f.button class: 'btn' do %>
    <%= yield(:button_text) %>
    <i class="material-icons right">send</i>
  <% end %>
<% end %>
