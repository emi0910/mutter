<% provide(:title, @article.title) %>

<div class="col-md-9">
  <div class="row">
    <div class="box">
      <div class="title-bar">
        <span class="title">
          <%= @article.title %>
        </span>
      </div>

      <div class="clear"></div>

      <div class="content">
        <%= raw Kramdown::Document.new(@article.content, input: "GFM").to_html %>
      </div>

      <div class="clear"></div>

    </div>
  </div>
</div>
