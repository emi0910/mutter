<div class="col s12 <%= mcol %>">
  <div class="card">
    <% if image %>
    <div class="card-image">
      <%= image_tag article.category.image %>
    </div>
    <% end %>

    <div class="card-content">
      <span class="card-title">
        <small>
          <%= article.title %>
          <% unless article.public? %>
          <i class="material-icons">lock</i>
          <% end %>
        </small>
      </span>
      <%= article.count %>
    </div>

    <div class="card-action">
      <%= link_to "Read this article", article %>
    </div>
  </div>
</div>
