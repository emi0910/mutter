<% provide(:title, "Profile") %>

<div class="row">
  <div class="col s4">
    <%= image_tag @user.icon, class: 'circle col s12' if @user.user_info %>
    <div class="col s12">
      <h5><%= @user.display_name %></h5>

      <p>
        <%= @user.user_info.description if @user.user_info %>
      </p>
    </div>
  </div>

  <div class="col s8">
    <div class="col s12">
      <h5>Articles</h5>
    </div>

    <%= render @articles, mcol: 'm12', image: false %>

    <div class="col s12">
      <%= link_to "more articles...", articles_path(user_id: @user.id) %>
    </div>
  </div>
</div>
