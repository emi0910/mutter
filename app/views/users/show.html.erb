<% provide(:title, "Profile") %>

<div class="row">
  <div class="col s4">
    <div class="card">
      <div class="card-image">
        <%= image_tag @user.icon, size: '200x200', class: 'resposive-img' if @user.user_info %>
      </div>
      <div class="card-content">
        <span class="card-title"><%= @user.display_name %></span>
        <p>
          <%= @user.user_info.description if @user.user_info %>
        </p>
      </div>
    </div>
  </div>

  <div class="col s8">
    <%= render @articles, mcol: 'm12', image: false %>

    <div class="col s12">
      <%= link_to "more articles...", articles_path(user_id: @user.id) %>
    </div>
  </div>
</div>
